class tienda:
    def __init__(self, nombre):
        self.nombre = nombre
        self.productos = []

    def añadir_producto(self, producto):
        self.productos.append(producto)

    def eliminar_producto(self, producto):
        if producto in self.productos:
            self.productos.remove(producto)
        else:
            print(f"el producto {producto} no está en la lista.")

    def obtener_productos(self):
        return self.productos

tienda = tienda("mi tienda")
tienda.añadir_producto("camiseta")
tienda.añadir_producto("pantalon")
tienda.añadir_producto("Zapatos")

print(f"productos disponibles en {tienda.nombre}: {tienda.obtener_productos()}")

tienda.eliminar_producto("pantalon")
print(f"productos después de eliminar pantalon: {tienda.obtener_productos()}")
